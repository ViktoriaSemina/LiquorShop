<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ViewsClient.ProductPageActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <ImageView
            android:id="@+id/img_pp_product"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="78dp"
            app:srcCompat="@drawable/ic_jackdaniels" />

        <TextView
            android:id="@+id/txt_pp_productName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Whiskey - Jack Daniels"
            android:textAlignment="center"
            android:fontFamily="sans-serif-condensed"
            android:textStyle="normal"
            android:textSize="20dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txt_pp_productPrice"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:fontFamily="sans-serif-condensed"
            android:textStyle="bold"
            android:textSize="20dp"
            android:text="40$"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btnAddToCart"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:onClick="onClickAddToCart"
            android:background="@color/colorBlueDark"
            android:textColor="@color/colorWhite"
            android:text="Add to cart"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>

    </LinearLayout>
    </LinearLayout>
</RelativeLayout>