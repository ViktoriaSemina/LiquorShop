<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ViewsAdmin.CategoryActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <EditText
            android:id="@+id/edTxtCategoryName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="Category name"
            />

        <EditText
            android:id="@+id/edTxtImageUrl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="text"
            android:hint="Insert the link" />

        <Button
            android:id="@+id/btnSaveCategory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClickSaveCategory"
            android:text="Save" />

        <Button
            android:id="@+id/btnSelect"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select" />

        <Button
            android:id="@+id/btnMoveToHome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClickMoveToHome"
            android:text="Go to catalog" />

        <GridView
            android:id="@+id/grdVwCategories"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnWidth="40dp"
            android:numColumns="1"/>

    </LinearLayout>


</RelativeLayout>